/* miniprogram/pages/sub/record.wxss */
.page {
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

iconfont {
  font-size: 1.6rem;
}

.scale-container {
  display: flex;
  align-items: center;
  height: 500rpx;
  justify-content: space-between;
}

.vertical .scale-value {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  justify-content: flex-end;
  flex-direction: column;
  width: 65%;
}
.vertical .scale-view {
  width: 25%;
  height: 100%;
}

.icon-shengao {
  font-size: 150px;
  line-height: 1;
  transform-origin: 50% 100%;
  color: rgba(8, 180, 100, .2);
}

.scale-container.horizontal {
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.horizontal .scale-value {
  height: 65%;
}
.horizontal .scale-view {
  width: 100%;
  height: 35%;
}
.icon---shengaotizhong {
  font-size: 160px;
  line-height: 1;
  transform-origin: 50% 100%;
  color: rgba(8, 180, 100, .2);
  display: block;
}
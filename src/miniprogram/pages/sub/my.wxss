.UCenter-bg {
  background-image: url(https://btx-1252047676.cos.ap-beijing.myqcloud.com/miniapp/image/member/Peqdi4BDD7Ff8f55354eafd88bb15b5a3873d859bd68.jpg);
  background-size: cover;
  min-height: 500rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg .image {
  width: 140rpx;
  height: 140rpx;
  display: block;
  overflow: hidden;
  border: 1px solid rgba(greenyellow,0.5);
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}
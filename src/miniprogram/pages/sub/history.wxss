/* miniprogram/pages/sub/history.wxss */
.table-outer-box {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.table {
  height: 80rpx;
  color: rgb(255, 255, 255);
  line-height: 80rpx;
  border-bottom: 1rpx solid rgb(255, 255, 255);
  text-align: center;
}

.table:last-child {
  border-bottom: 0px;
}

.table-flex {
  display: flex;
}

.table-theme {
  font-size: 28rpx;
}

.table-item {
  font-size: 24rpx;
  opacity: 0.6;
}

.item {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  flex: 1;
}

.scroll-view {
  flex: 1;
}
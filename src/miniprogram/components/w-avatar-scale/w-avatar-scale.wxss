view,
text {
  box-sizing: border-box;
}

.wrapper {
  position: relative;
}

.scale-mask {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 100;
}

.horizontal-box {
  padding-top: 7%;
}

.horizontal-box .scroll-wrapper {
  position: relative;
  display: flex;
}

.horizontal-box .zz {
  border-left-color: var(--main-color-100);
  position: absolute;
  left: 50%;
  top: 10px;
  margin-left: 1px;
  transform: translate(-50%);
  z-index: 10;
  height: 10px;
  border-left: 5px solid transparent;
  border-top: 10px solid red;
  border-right: 5px solid transparent;
}

/* .scale-container{
  display: flex;
} */
.horizontal-box .scale-wrapper {
  display: flex;
}

.horizontal-box .scale-grip {
  position: relative;
  height: 100rpx;
  display: flex;
}

.horizontal-box .scale-grip::before {
  content: "";
  position: absolute;
  top: 0;
  border-width: 1px;
  border-color: inherit;
  border-style: solid;
  height: 100%;
  transform: translateX(-50%);
  left: 0rpx;
}

.horizontal-box .scale-grip:last-child::after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  border-width: 1px;
  border-color: inherit;
  border-style: solid;
  height: 100%;
}

.horizontal-box .scale-grip-item {
  height: 60%;
  padding-top: 10rpx;
}

.horizontal-box .scale-grip-item:not(:last-child) {
  border-right: 1px solid #000000;
}

.horizontal-box .scale-vaule-wrapper {
  position: relative;
  display: flex;
  text-align: center;

}

.horizontal-box .scale-vaule {
  padding: 30rpx 0;
  transform: translateX(50%);
}

.horizontal-box .first-scale-value {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 30rpx 0;
  transform: translateX(-50%);
}

.horizontal-box .seat {
  flex-shrink: 0;
  box-sizing: border-box;
}

.scale-avatar {
  padding: 4px;
}

.avatar {
  height: 100%;
  width: 100%;
  border-radius: 1000px;
  background: #aaa;
  background-repeat: no-repeat;
  background-size: cover
}

.avatar.plus {
  display: flex;
  align-items: center;
  justify-content: center;
}
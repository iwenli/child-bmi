@import "assets/colorui/main.wxss";
@import "assets/colorui/icon.wxss";
@import "assets/fonts/mono.wxss";
@import "./main.wxss";

/**app.wxss**/
ff-canvas {
  width: 100%;
  height: 500rpx;
  display: block;
}

.font-ttqy {
  font-family: 'TTQinYuanJ-W4';
}

.font-mono {
  font-family: 'JetBrains Mono';
  letter-spacing: -6rpx
}

.hide {
  display: none;
}


.bt-group {
  margin-top: 48rpx;
  width: 100%;
  background: rgba(255,255,255,.98);
  border-radius: 48rpx;
  height: 80rpx;
  padding: 4rpx;
}

.bt-group .cu-btn {
  font-size: 28rpx;
  line-height: 28rpx;
  color: var(--main-color-100);
  border-radius: 40rpx;
  background: transparent;
  height: 100%;
  width: 50%;
}

.bt-group .cu-btn.select {
  background: var(--main-color-100);
  color: white;
}

